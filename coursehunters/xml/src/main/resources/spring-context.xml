<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <!-- -load the properties file -->

    <context:property-placeholder location="classpath:example.properties"/>

    <!-- define bean-->

    <bean id="HandBag"
          class="org.chubaka.chapterone.HandBag">
    </bean>

    <bean id="HeavyBag"
          class="org.chubaka.chapterone.HeavyBag">
    </bean>

    <bean id="RunCoach"
          class="org.chubaka.chapterone.RunCoach">
        <!-- define dependency in constructor-->
        <constructor-arg name="bag" ref="HeavyBag"/>
        <constructor-arg name="name" value="Vasya"/>
    </bean>

    <bean id="SwimCoach"
          class="org.chubaka.chapterone.SwimCoach">
        <!-- set up setter injction -->
        <property name="bag" ref="HandBag"/>
        <!-- inject literal value -->
        <property name="name" value="Petya"/>
        <property name="email" value="${email}"/>
    </bean>

</beans>